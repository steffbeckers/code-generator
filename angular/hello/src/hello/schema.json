{
  "$schema": "http://json-schema.org/schema",
  "$id": "HelloSchematics",
  "title": "Hello Options Schema",
  "type": "object",
  "description": "Says hello to someone",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the person",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Who's there?"
    }
  },
  "required": ["name"]
}
