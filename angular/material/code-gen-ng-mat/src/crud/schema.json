{
  "$schema": "http://json-schema.org/schema",
  "id": "SchemanticsForCodeGenNgMatCrud",
  "title": "Code Generator",
  "type": "object",
  "properties": {
    "appRoot": {
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the component.",
      "visible": false
    },
    "sourceDir": {
      "type": "string",
      "default": "src"
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "modelScheme": {
      "type": "string",
      "default": "code-gen-model-scheme.json",
      "description": "Model scheme structure JSON file"
    }
  }
}
