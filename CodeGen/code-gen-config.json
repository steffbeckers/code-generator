            "Name": "Id",
            "Type": "Guid",
            "Key": true
          },
          {
            "Name": "DateCreated",
            "DisplayName": "Date created",
            "Type": "DateTime",
            "AuditDateCreated": true
          },
          // {
          //   "Name": "CreatedBy",
          //   "Type": "Guid",
          //   "AuditCreatedBy": true
          // },
          {
            "Name": "DateModified",
            "DisplayName": "Date modified",
            "Type": "DateTime?",
            "AuditDateModified": true
          },
          // {
          //   "Name": "ModifiedBy",
          //   "Type": "Guid?",
          //   "AuditModifiedBy": true
          // },
          {
            "Name": "Deleted",
            "Type": "bool",
            "AuditDeleted": true
          }
        ]
      },
      "List": [
        {
          "Name": "Project",
          "Audit": true,
          "Properties": [
            {
              "Name": "Name",
              "Type": "string",
